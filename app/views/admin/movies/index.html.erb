<% flash.each do |message_type, message| %>
    <div><%= message %></div>
<% end %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>公開年</th>
            <th>上映中</th>
            <th>概要</th>
            <th>画像</th>
            <th>登録日時</th>
            <th>更新日時</th>
        </tr>
    </thead>
    <% @movies.each do |movie| %>
        <tr>
            <td><%= link_to movie.id, edit_admin_movie_path(movie.id) %></td>
            <td><%= movie.name %></td>
            <td><%= movie.year %></td>
            <td><%= movie.is_showing ? "公開中" : "上映予定" %></td>
            <td><%= movie.description %></td>
            <td><%= link_to "画像",movie.image_url %></td>
            <td><%= movie.created_at %></td>
            <td><%= movie.updated_at %></td>
        </tr>
    <% end %>
</table>